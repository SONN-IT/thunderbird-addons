{
    "name": "Reply-SONN",
    "description": "Automatisches Hinzufügen der @ablage Adresse",
    "version": "2.2",
    "applications": {
      "gecko": {
        "id": "reply@sonn.at",
        "strict_min_version": "78.0"
      }
    },
    "permissions": [
      "compose",
      "storage"
    ],
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "options_ui": {
      "page": "settings/settings.html",
      "open_in_tab": false,
      "browser_style": false
    },
    "compose_action": {
      "default_title": "Automatisches Hinzufügen der @ablage Adresse",
      "default_icon": "logo.svg",
      "default_label": "@ablage"
    },
    "commands": {
      "reply_hotkey1": {
        "description": "Standard Hashtag"
      },
      "reply_hotkey2": {
        "description": "Hashtag 2"
      }
    },
    "manifest_version": 2,
    "icons": {
      "16": "logo.svg",
      "32": "logo.svg",
      "48": "logo.svg",
      "96": "logo.svg"
    }
}