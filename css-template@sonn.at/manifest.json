{
  "name": "CSS Tempalte",
  "description": "SONN Email Formatvorlage",
  "version": "1.0-rc.2",
  "applications": {
    "gecko": {
      "id": "css-template@sonn.at",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "compose",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false,
    "browser_style": false
  },
  "manifest_version": 2
}
