{
  "name": "CSS Template",
  "description": "SONN Email Formatvorlage",
  "version": "1.1.0",
  "applications": {
    "gecko": {
      "id": "css-template@sonn.at",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "compose",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "LegacyPrefs": {
      "schema": "api/legacyPrefs.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "api/legacyPrefs.js"
      }
    }
  },
  "manifest_version": 2
}
