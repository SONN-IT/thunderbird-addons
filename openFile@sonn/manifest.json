{
    "name": "Aktenordner öffnen",
    "description": "alle Aktenordner im Betreff öffnen",
    "version": "2.0-rc.8",
    "applications": {
      "gecko": {
        "id": "openFile@sonn.at",
        "strict_min_version": "78.0"
      }
    },
    "permissions": [
      "messagesRead",
      "notifications",
      "menus"
    ],
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "message_display_action": {
      "default_title": "alle Aktenordner im Betreff öffnen",
      "default_icon": "logo.svg",
      "default_label": "Akt öffnen"
    },
    "experiment_apis": {
      "OpenFolderApi": {
        "schema": "api/OpenFolderApi.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths" : [["OpenFolder"]],
          "script" : "api/OpenFolderApi.js"
        }
      },
      "LegacyPrefs": {
        "schema": "api/legacyPrefs.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths": [["LegacyPrefs"]],
          "script": "api/legacyPrefs.js"
        }
      }
    },
    "commands": {
      "Event-SONN_openFile": {
        "suggested_key": {
          "default": "Ctrl+Alt+D"
        },
        "description": "Akt öffnen"
      }
    },
    "manifest_version": 2,
  "icons": {
    "16": "logo.svg",
    "32": "logo.svg",
    "48": "logo.svg",
    "96": "logo.svg"
  }
}